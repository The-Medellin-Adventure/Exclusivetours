// scripts/createToken.js
import { createClient } from '@supabase/supabase-js';

// ⚠️ Usa tus variables de entorno
const supabaseUrl = process.env.SUPABASE_URL;
const supabaseKey = process.env.SUPABASE_SERVICE_ROLE_KEY; // debe ser el service_role key (⚠️ nunca publiques esto en frontend)
const supabase = createClient(supabaseUrl, supabaseKey);

async function createToken() {
  const token = 'demo123'; // 👈 cámbialo si quieres generar otro
  const expiresAt = '2099-12-31T23:59:59Z';

  const { data, error } = await supabase
    .from('access_tokens')
    .insert([
      {
        token,
        status: 'active',
        expires_at: expiresAt,
      },
    ])
    .select();

  if (error) {
    console.error('❌ Error al crear token:', error.message);
  } else {
    console.log('✅ Token creado:', data);
  }
}

createToken();
